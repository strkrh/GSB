<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="6dip" >

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:text="Id: "
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView1"
    android:layout_alignLeft="@+id/textView1"
    android:text="Libelle: "
    android:textAppearance="?android:attr/textAppearanceMedium"/>

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView2"
    android:layout_alignLeft="@+id/textView2"
    android:text="Quantite: "
    android:textAppearance="?android:attr/textAppearanceMedium"/>


<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3"
    android:layout_alignLeft="@+id/textView3"
    android:text="Montant:"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView4"
    android:layout_alignLeft="@+id/textView4"
    android:text="Date: "
    android:textAppearance="?android:attr/textAppearanceMedium" />
//android:visibility="@{null ? invisible : visible}"


<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView5"
    android:layout_alignLeft="@+id/textView5"
    android:text="DateSaisie: "
    android:textAppearance="?android:attr/textAppearanceMedium" />


<TextView
    android:id="@+id/idFrais"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/textView1"
    android:layout_alignBottom="@+id/textView1"
    android:layout_toRightOf="@+id/textView3"
    android:text="TextView" />


<TextView
    android:id="@+id/libelleFrais"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/textView2"
    android:layout_alignLeft="@+id/idFrais"
    android:layout_alignBottom="@+id/textView2"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="50dp"
    android:text="TextView" />

<TextView
    android:id="@+id/txtQte"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView3"
    android:layout_marginLeft="0dp"
    android:layout_marginBottom="-21dp"
    android:layout_toRightOf="@+id/textView3"
    android:text="TextView" />

<TextView
    android:id="@+id/montant"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView2"
    android:layout_alignLeft="@+id/txtQte"
    android:layout_marginLeft="-2dp"
    android:layout_marginBottom="-74dp"
    android:text="TextView" />

<TextView
    android:id="@+id/dateFrais"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView2"
    android:layout_alignLeft="@+id/txtQte"
    android:layout_marginLeft="0dp"
    android:layout_marginBottom="-92dp"
    android:text="TextView" />

<TextView
    android:id="@+id/dateActu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView6"
    android:layout_alignLeft="@+id/dateFrais"
    android:layout_marginLeft="21dp"
    android:layout_marginBottom="-24dp"
    android:text="TextView" />


<ImageView
    android:id="@+id/delete"
    android:layout_width="43dp"
    android:layout_height="47dp"
    android:layout_alignLeft="@+id/dateActu"
    android:layout_marginLeft="142dp"
    android:layout_weight="1"
    android:baselineAlignBottom="false"
    app:srcCompat="@android:drawable/ic_menu_delete" />


</RelativeLayout>